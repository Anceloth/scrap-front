# Production Environment Configuration
VITE_APP_NAME=React Auth App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern React Authentication Application

# API Configuration - Production
VITE_API_BASE_URL=https://your-production-api.com/api
VITE_API_TIMEOUT=15000

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600000

# Theme Configuration
VITE_THEME_STORAGE_KEY=theme_mode
VITE_DEFAULT_THEME=light

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_REMEMBER_ME=true

# Production Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Social Auth - Production
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id
VITE_FACEBOOK_APP_ID=your_production_facebook_app_id
